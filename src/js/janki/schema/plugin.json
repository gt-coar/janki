{
  "$schema": "http://json-schema.org/draft-07/schema",
  "default": {},
  "definitions": {
    "anki-card": {
      "additionalProperties": false,
      "properties": {
        "cdeck": {
          "type": "string"
        },
        "cdue": {
          "type": "integer"
        },
        "cfactor": {
          "type": "integer"
        },
        "cid": {
          "type": "integer"
        },
        "civl": {
          "type": "integer"
        },
        "clapses": {
          "type": "integer"
        },
        "cleft": {
          "type": "integer"
        },
        "cmod": {
          "type": "integer"
        },
        "codeck": {
          "type": "string"
        },
        "codue": {
          "type": "integer"
        },
        "cord": {
          "type": "integer"
        },
        "cqueue": {
          "type": "string"
        },
        "creps": {
          "type": "integer"
        },
        "ctype": {
          "type": "string"
        },
        "cusn": {
          "type": "integer"
        },
        "nid": {
          "type": "integer"
        }
      },
      "required": [
        "cid",
        "cdeck",
        "cdue",
        "cfactor",
        "civl",
        "clapses",
        "cleft",
        "cmod",
        "codeck",
        "codue",
        "cord",
        "cqueue",
        "creps",
        "ctype",
        "cusn",
        "nid"
      ],
      "title": "Card",
      "type": "object"
    },
    "anki-note": {
      "additionalProperties": false,
      "properties": {
        "nflds": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "nguid": {
          "type": "string"
        },
        "nid": {
          "type": "integer"
        },
        "nmod": {
          "type": "integer"
        },
        "nmodel": {
          "type": "string"
        },
        "ntags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "nusn": {
          "type": "integer"
        }
      },
      "required": ["nflds", "nguid", "nmod", "nmodel", "ntags", "nusn", "nid"],
      "title": "Note",
      "type": "object"
    },
    "anki-rev": {
      "additionalProperties": false,
      "properties": {
        "cid": {
          "type": "integer"
        },
        "rease": {
          "type": "integer"
        },
        "rfactor": {
          "type": "integer"
        },
        "rid": {
          "type": "integer"
        },
        "rivl": {
          "type": "integer"
        },
        "rlastIvl": {
          "type": "integer"
        },
        "rtime": {
          "type": "integer"
        },
        "rtype": {
          "type": "string"
        },
        "rusn": {
          "type": "integer"
        }
      },
      "required": [
        "rid",
        "cid",
        "rease",
        "rfactor",
        "rivl",
        "rlastIvl",
        "rtime",
        "rtype",
        "rusn"
      ],
      "title": "Rev",
      "type": "object"
    },
    "api-collection": {
      "additionalProperties": false,
      "description": "a full description of a collection of spaced-repetition cards, as returned by the server",
      "properties": {
        "cards": {
          "items": {
            "$ref": "#/definitions/anki-card"
          },
          "type": "array"
        },
        "notes": {
          "items": {
            "$ref": "#/definitions/anki-note"
          },
          "type": "array"
        },
        "path": {
          "$ref": "#/definitions/api-contents-path",
          "description": "the contents path to the collection"
        },
        "revs": {
          "items": {
            "$ref": "#/definitions/anki-rev"
          },
          "type": "array"
        }
      },
      "required": ["cards", "notes", "path", "revs"],
      "title": "Collection",
      "type": "object"
    },
    "api-contents-path": {
      "description": "a contents API path as understood by `/api/contents/{:path}`",
      "format": "uri",
      "type": "string"
    },
    "api-extensions": {
      "default": ["anki2", "apkg"],
      "type": "array"
    },
    "api-url-root": {
      "default": ["janki"],
      "type": "array"
    },
    "lab-user-settings": {
      "default": {},
      "description": "user-configured settings",
      "properties": {
        "collections": {
          "description": "Ephemeral collections not saved in files",
          "items": {
            "$ref": "#/definitions/api-collection"
          },
          "type": "array"
        }
      },
      "title": "Janki Settings",
      "type": "object"
    }
  },
  "description": "Configure Janki spaced-repetition cards",
  "jupyter.lab.setting-icon": "@gt-coar/janki:janki",
  "jupyter.lab.setting-icon-label": "Card Collections",
  "oneOf": [
    {
      "$ref": "#/definitions/lab-user-settings"
    }
  ],
  "title": "Card Collections",
  "type": "object"
}
